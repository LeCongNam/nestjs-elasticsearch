{
    "compilerOptions": {
        "strict": true,
        "target": "es6",
        "module": "commonjs",
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "strictPropertyInitialization": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "lib/*": ["./src/lib/*"],
            "nestjs/*": ["./src/nestjs/*"],
            "test/*": ["./src/test/*"]
        }
    },
    "watchOptions": {
        "watchFile": "fixedpollinginterval"
    }
}
