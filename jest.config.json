{
    "moduleFileExtensions": ["js", "json", "ts"],
    "modulePaths": ["<rootDir>", "src"],
    "moduleNameMapper": {
        "^lib/(.*)$": ["<rootDir>/src/lib/$1"],
        "^nestjs/(.*)$": ["<rootDir>/src/nestjs/$1"],
        "^test/(.*)$": ["<rootDir>/src/test/$1"]
    },
    "rootDir": "./src",
    "testRegex": ".spec.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "restoreMocks": true,
    "resetMocks": true
}
